{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "build",
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "es5"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "exclude": [
    "node_modules"
  ]
}
